{
	"name": "root",
	"private": true,
	"scripts": {
		"build": "npm run build:prod",
		"build:dev": "webpack --mode development",
		"build:prod": "webpack --mode production",
		"dev": "npm run build:dev",
		"prod": "npm run build:prod",
		"doc": "npm run docs",
		"docs": "npm run docs:html && npm run docs:md",
		"docs:html": "jsdoc -d docs/html -R README.md packages/*/lib/*.js",
		"docs:md": "jsdoc2md -f packages/*/lib/*.js > docs/md/docs.md",
		"test": "jest",
		"test:coverage": "npm run test -- --coverage",
		"test:coverage:watch": "npm run test -- --coverage --watch",
		"test:watch": "npm run test -- --watch",
		"test:watch:coverage": "npm run test:coverage:watch"
	},
	"devDependencies": {
		"@babel/core": "^7.6.2",
		"@babel/preset-env": "^7.6.2",
		"babel-jest": "^24.9.0",
		"babel-loader": "^8.0.6",
		"clean-webpack-plugin": "^3.0.0",
		"eslint": "^6.5.1",
		"eslint-loader": "^3.0.2",
		"jest": "^24.9.0",
		"lerna": "^3.16.4",
		"webpack": "^4.41.0",
		"webpack-cli": "^3.3.9"
	}
}
